FROM golang:1.26-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -o /oracleverk-testapp .

FROM gcr.io/distroless/static-debian12

COPY --from=builder /oracleverk-testapp /oracleverk-testapp

EXPOSE 8080

ENTRYPOINT ["/oracleverk-testapp"]
